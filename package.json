{
    "private": true,
    "scripts": {
        "slender": "echo 'Slender - Low-level rapid web development environment based on Slim framework'",
        "bundle-template-css": "parcel build 'resources/template/css/*' --dist-dir 'public/css/template'",
        "bundle-template-js": "parcel build 'resources/template/js/*' --dist-dir 'public/js/template'",
        "bundle-template-images": "parcel build 'resources/template/images/*' --dist-dir 'public/images/template'",
        "bundle-web-user-css": "parcel build 'resources/web/user/css/*' --dist-dir 'public/css/web/user'",
        "bundle-web-user-js": "parcel build 'resources/web/user/js/*' --dist-dir 'public/js/web/user'",
        "bundle-web-user-images": "parcel build 'resources/web/user/images/*' --dist-dir 'public/images/web/user'",
        "bundle-web-admin-css": "parcel build 'resources/web/admin/css/*' --dist-dir 'public/css/web/admin'",
        "bundle-web-admin-js": "parcel build 'resources/web/admin/js/*' --dist-dir 'public/js/web/admin'",
        "bundle-web-admin-images": "parcel build 'resources/web/admin/images/*' --dist-dir 'public/images/web/admin'",
        "bundle-template": "npm run bundle-template-css && npm run bundle-template-js && npm run bundle-template-images",
        "bundle-web-user": "npm run bundle-web-user-css && npm run bundle-web-user-js && npm run bundle-web-user-images",
        "bundle-web-admin": "npm run bundle-web-admin-css && npm run bundle-web-admin-js && npm run bundle-web-admin-images",
        "bundle": "npm run bundle-template && npm run bundle-web-user && npm run bundle-web-admin"
    },
    "devDependencies": {
        "@fortawesome/fontawesome-free": "^5.15.4",
        "@parcel/transformer-image": "^2.0.0-rc.0",
        "@parcel/transformer-svg": "^2.0.0-nightly.2430",
        "halfmoon": "^1.1.1",
        "parcel": "^2.0.0-rc.0"
    }
}
