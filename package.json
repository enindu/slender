{
  "name": "slender",
  "version": "0.2.4-dev",
  "description": "Developer-friendly, low-level, rapid web development environment based on Slim framework",
  "type": "module",
  "keywords": [
    "php",
    "slim",
    "cms"
  ],
  "homepage": "https://github.com/enindu/slender",
  "bugs": {
    "url": "https://github.com/enindu/slender/issues",
    "email": "enindu@gmail.com"
  },
  "license": "MIT",
  "author": {
    "name": "Enindu Alahapperuma",
    "email": "enindu@gmail.com",
    "url": "https://github.com/enindu"
  },
  "private": true,
  "scripts": {
    "slender": "echo \"Slender - Developer-friendly, low-level, rapid web development environment based on Slim framework\"",
    "bundle-admin-css": "parcel build sources/assets/admin/css/*.css --out-dir resources/admin/assets/css --public-url ./",
    "bundle-admin-js": "parcel build sources/assets/admin/js/*.js --out-dir resources/admin/assets/js --public-url ./",
    "bundle-user-css": "parcel build sources/assets/user/css/*.css --out-dir resources/user/assets/css --public-url ./",
    "bundle-user-js": "parcel build sources/assets/user/js/*.js --out-dir resources/user/assets/js --public-url ./",
    "bundle-template-css": "parcel build sources/assets/template/css/*.css --out-dir resources/template/assets/css --public-url ./",
    "bundle-template-js": "parcel build sources/assets/template/js/*.js --out-dir resources/template/assets/js --public-url ./",
    "bundle": "npm run bundle-admin-css && npm run bundle-admin-js && npm run bundle-user-css && npm run bundle-user-js && npm run bundle-template-css && npm run bundle-template-js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/enindu/slender.git"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.2",
    "halfmoon": "^1.1.1",
    "parcel": "^1.12.4"
  }
}
