{% extends "@admin/layouts/sub-2.twig" %}

{% set id = "home" %}
{% set title = "Dashboard" %}

{% block sub_content %}
<div class="container-fluid">
  <div class="row row-eq-spacing">
    <div class="col-12 col-sm-6 col-lg-3 mb-20 mb-sm-0">
      <div class="card p-15">
        <h1 class="card-title">
          <i class="fa fa-user mr-5"></i> Profile
        </h1>
        <div class="mb-20">
          <div>
            <i class="fa fa-asterisk mr-5"></i>
            <strong>Username:</strong> {{ account.username }}
          </div>
          <div>
            <i class="fa fa-asterisk mr-5"></i>
            <strong>Role:</strong> {{ account.role.title }}
          </div>
        </div>
        <a href="{{ "/admin/accounts/profile"|page }}" class="btn btn-block">
          <i class="fa fa-user mr-5"></i> Profile
        </a>
      </div>
    </div>
    <div class="col-12 col-sm-6 col-lg-3 mb-20 mb-sm-0">
      <div class="card p-15">
        <h1 class="card-title">
          <i class="fa fa-shield-alt mr-5"></i> Admins
        </h1>
        <div class="mb-20">
          <div>
            <i class="fa fa-asterisk mr-5"></i>
            <strong>Total admins:</strong> {{ admins|length }} admins
          </div>
          <div>
            <i class="fa fa-asterisk mr-5"></i>
            <strong>Total roles:</strong> {{ roles|length }} roles
          </div>
        </div>
        <a href="{{ "/admin/admins"|page }}" class="btn btn-block">
          <i class="fa fa-shield-alt mr-5"></i> Admins
        </a>
      </div>
    </div>
    <div class="col-12 col-sm-6 col-lg-3 mb-20 mb-sm-0">
      <div class="card p-15">
        <h1 class="card-title">
          <i class="fa fa-users mr-5"></i> Users
        </h1>
        <div class="mb-20">
          <div>
            <i class="fa fa-asterisk mr-5"></i>
            <strong>Total users:</strong> {{ users|length }} users
          </div>
          <div>
            <i class="fa fa-asterisk mr-5"></i>
            <strong>Total roles:</strong> {{ roles|length }} roles
          </div>
        </div>
        <a href="{{ "/admin/users"|page }}" class="btn btn-block">
          <i class="fa fa-users mr-5"></i> Users
        </a>
      </div>
    </div>
    <div class="col-12 col-sm-6 col-lg-3">
      <div class="card p-15">
        <h1 class="card-title">
          <i class="fa fa-image mr-5"></i> Sliders
        </h1>
        <div class="mb-20">
          <div>
            <i class="fa fa-asterisk mr-5"></i>
            <strong>Total sliders:</strong> {{ sliders|length }} sliders
          </div>
          <div>
            <i class="fa fa-asterisk mr-5"></i>
            <strong>Total types:</strong> {{ types|length }} types
          </div>
        </div>
        <a href="{{ "/admin/sliders"|page }}" class="btn btn-block">
          <i class="fa fa-image mr-5"></i> Sliders
        </a>
      </div>
    </div>
  </div>
</div>
{% endblock %}
