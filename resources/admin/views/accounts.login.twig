{% extends "@admin/layouts/base-1.twig" %}

{% set id = "accounts.login" %}
{% set title = "Login | Accounts" %}

{% block content %}
<div class="card">
  <div class="card-header">
    <div class="card-title h4">Login</div>
    <div class="card-subtitle text-gray">Login to your account</div>
  </div>
  <div class="card-body">
    <form action="{{ "/admin/accounts/login"|page }}" method="post">
      <div class="form-group">
        <label for="username" class="form-label">Enter username</label>
        <input type="text" name="username" id="username" class="form-input" placeholder="Username" maxlength="6" required>
      </div>
      <div class="form-group">
        <label for="password" class="form-label">Enter password</label>
        <input type="password" name="password" id="password" class="form-input" placeholder="Password" minlength="6" maxlength="32" required>
      </div>
      <div class="text-right">
        <button class="btn btn-primary">Login</button>
      </div>
    </form>
  </div>
</div>
{% endblock %}
