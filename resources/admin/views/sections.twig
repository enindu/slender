{% extends "@admin/layouts/sub-2.twig" %}

{% set id = "sections" %}
{% set title = "Sections" %}

{% block sub_content %}
<div class="container-fluid">
  <div class="row row-eq-spacing">
    <div class="col-12 col-sm-auto mb-20 mb-sm-0">
      <a href="#" id="back" class="btn">
        <i class="fa fa-chevron-left mr-5"></i> Back
      </a>
    </div>
    <div class="col-12 col-sm-auto">
      <h4 class="my-0">
        <i class="fa fa-chart-pie mr-5"></i> Sections
      </h4>
    </div>
  </div>
  <div class="row row-eq-spacing">
    <div class="col-12 col-sm-6 col-lg-3 mb-20 mb-sm-0">
      <div class="card p-15">
        <h1 class="card-title">
          <i class="fa fa-plus mr-5"></i> Add Section
        </h1>
        <form action="{{ "/admin/sections/add"|page }}" method="post">
          <div class="form-group">
            <label for="title" class="required">Enter title</label>
            <input type="text" name="title" id="title" class="form-control" placeholder="Title" maxlength="191" required>
          </div>
          <div class="text-right">
            <button class="btn">
              <i class="fa fa-plus mr-5"></i> Add
            </button>
          </div>
        </form>
      </div>
    </div>
    <div class="col-12 col-sm-6 col-lg-9">
      <div class="card p-15">
        <h1 class="card-title">
          <i class="fa fa-chart-pie mr-5"></i> Sections
        </h1>
        <div class="table-responsive">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th class="w-25">ID</th>
                <th>Title</th>
                <th>Images</th>
                <th>Files</th>
                <th>Contents</th>
                <th class="w-25"></th>
              </tr>
            </thead>
            <tbody>
              {% for item in sections %}
                <tr>
                  <td>{{ item.id }}</td>
                  <td>{{ item.title }}</td>
                  <td>{{ item.images|length }} images</td>
                  <td>{{ item.files|length }} files</td>
                  <td>{{ item.contents|length }} contents</td>
                  <td>
                    <form action="{{ "/admin/sections/remove"|page }}" method="post">
                      <input type="hidden" name="id" value="{{ item.id }}">
                      <button class="btn btn-danger btn-square">
                        <i class="fa fa-trash-alt"></i>
                      </button>
                    </form>
                  </td>
                </tr>
              {% else %}
                <tr>
                  <td colspan="6">
                    <div class="text-center">
                      <i class="fa fa-frown mr-5"></i> No sections found!
                    </div>
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
